{
  "compilerOptions": {
      "declaration": true,
      "module": "system",
      "noFallthroughCasesInSwitch": true,
      "noImplicitReturns": true,
      "removeComments": true,
      "sourceMap": true,
      "target": "es2015",
      "strictNullChecks": true,
      "noImplicitAny": true,
      "noImplicitThis": true,
      "alwaysStrict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "esModuleInterop": true
  },
  "exclude": [
      "node_modules",
      "**/*.spec.ts"
  ]
}
